<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.qapaper.myapplication">
    <uses-permission android:name="android.permission.INTERNET"/>
    <uses-permission android:name="android.permission.SEND_SMS" />

    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="Can Delivery"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/AppTheme">
        <activity android:name=".Halt"
            android:theme="@style/AppTheme.NoActionBar">

        </activity>
        <activity
            android:name=".OrderConfirmActivity"
            android:label="Order Details"></activity>
        <activity
            android:name=".order_container"
            android:theme="@style/AppTheme.NoActionBar" />
        <activity
            android:name=".EditAddress"
            android:theme="@style/AppTheme.NoActionBar" />
        <activity
            android:name=".address_activity"
            android:theme="@style/AppTheme.NoActionBar" />
        <activity
            android:name=".Location"
            android:theme="@style/AppTheme.NoActionBar" />
        <activity
            android:name=".Generation"
            android:theme="@style/AppTheme.NoActionBar" />
        <activity
            android:name=".User"
            android:label="About Me" />
        <activity
            android:name=".welcome"
            android:label="Water Can Delivery"
            android:theme="@style/AppTheme.NoActionBar">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name=".signup"
            android:theme="@style/AppTheme.NoActionBar"
            android:windowSoftInputMode="stateHidden" />
        <activity
            android:name=".Login"
            android:theme="@style/AppTheme.NoActionBar"
            android:windowSoftInputMode="stateHidden" />
        <activity
            android:name=".MainActivity"
            android:theme="@style/AppTheme.NoActionBar" />
    </application>

</manifest>